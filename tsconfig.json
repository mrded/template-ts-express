{
  "compilerOptions": {
    "outDir": "./dist",
    "incremental": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "pretty": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "esModuleInterop": false
  },
  "include": ["./src/**/*"]
}
